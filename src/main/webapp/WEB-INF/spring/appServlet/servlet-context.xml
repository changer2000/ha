			</beans:list>
		</beans:property>
	</beans:bean>
	<beans:bean id="userArgumentResolver" class="com.etech.system.resolver.UserArgumentResolver">
	</beans:bean>
	-->
	
	<!-- Imports user-defined @Controller beans that process client requests -->
	<beans:import resource="controllers.xml"/>
	
	
</beans:beans>